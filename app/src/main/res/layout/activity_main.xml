<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShowEmployee"
        android:layout_width="match_parent"
        android:text="Show all employee"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnRegisterEmployee"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:text="register employee"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSearchEmployee"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:text="search employee"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnUpdateEmployee"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:text="update/delete employee"
        android:layout_height="wrap_content"/>

</LinearLayout>